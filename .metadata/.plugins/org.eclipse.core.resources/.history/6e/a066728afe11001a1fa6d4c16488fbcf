		JButton btnListar = new JButton("Listar");
		btnListar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				
//				List<Ticket>lista=operaciones.getTickets(txtFecha.getText());
//				for (int i = 0; i < lista.size(); i++) {
//					textArea2.append(lista.get(i).getFecha());
//					
//				}
				DefaultTableModel tbDatos = new DefaultTableModel();
		        tbDatos.addColumn("ID");
		        tbDatos.addColumn("HoraIngreso");
		        tbDatos.addColumn("HoraFin");
		        tbDatos.addColumn("Placa");
		        tbDatos.addColumn("Valor");
		        TicketON ticketON = new TicketON();
		        VehiculoON vehiculoON = new VehiculoON();
		        ArrayList<Ticket> lista = ticketON.listar();
		        for (Ticket t : lista) {
		            Object[] datos = new Object[1000];
		            datos[0] = t.getId();
		            datos[1] = t.getHoraIngreso();
		            datos[2] = t.getFechaFin();
		            String placa = vehiculoON.buscarPlacaxID(t.getCodV());
		            datos[3] = placa;
		            datos[4]= t.getValor();
		            tbDatos.addRow(datos);
		        }
		        table.setModel(tbDatos);
				
			}
		});
